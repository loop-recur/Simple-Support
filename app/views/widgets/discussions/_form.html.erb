<%= form_for @discussion, :url => discussions_url do |f| %>
<%= fields_for :user do |u| %>
<%= f.fields_for "[messages_attributes][]", Message.new do |m| %>

	<p>
		<%= u.label :name %>
		<%= u.text_field :name %>
	</p>
	<p>
		<%= u.label :email %>
		<%= u.text_field :email %>
	</p>

	<p>
		<%= m.text_area :body %>
	</p>
	
	<%= hidden_field_tag :deploy_url, "", :class => "deploy_url" %>
	<%= f.submit %>
	
<% end %>
<% end %>
<% end %>
