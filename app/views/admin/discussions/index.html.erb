<%= link_to "New Discussion", new_admin_discussion_path %>
<%= link_to "New Queue", new_admin_bucket_path %>

<ul>
	<li><%= link_to "1 New", params.merge(:status => :new) %></li>
	<li><%= link_to "1 Pending", params.merge(:status => :pending) %></li>
	<li><%= link_to "1 Important", params.merge(:status => :important) %></li>
	<li><%= link_to "1 Closed", params.merge(:status => :closed) %></li>
</ul>

<table>
	<tr>
		<td>Message</td>
		<td>User</td>
		<td>&nbsp;</td>
	</tr>
	<% for discussion in @discussions %>
		<tr>
			<td><%= link_to discussion.title, [:admin, discussion] %></td>
			<td><%= link_to discussion.user.email, edit_admin_ticket_holder_path(discussion.user) %></td>
			<td>
				<%= toggle_action("Close", "Open", discussion, :resolved) %>
				<%= toggle_action("Important", "Not Important", discussion, :important) %>
				<%= button_to("Delete", [:admin, discussion], :method => :delete) %>
			</td>
		</tr>
	<% end %>
</table>

<%= will_paginate @discussions %>