<%= fields_for :user do |u| %>
<%= form.fields_for "[messages_attributes][]", Message.new do |m| %>

	<p>
		<%= u.label :name %>
		<%= u.text_field :name %>
	</p>
	<p>
		<%= u.label :email %>
		<%= u.text_field :email %>
	</p>

	<p>
		<%= m.text_area :body %>
	</p>
	
	<%= form.submit %>
	
<% end %>
<% end %>
